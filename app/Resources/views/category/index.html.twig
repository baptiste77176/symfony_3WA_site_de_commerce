{% extends 'base.html.twig' %}
{% block body %}

    <div class="row my-4">
        <div class="col">
            <h1 class="mb-4">{{ category[0].tname }}</h1>
            <div class="row">
                {% for key, value in category %}
                <div class="col-sm-4 mb-5">

                    <div class="row">

                        <div class="col-sm-4">
                            <img src="{{asset('img/product/'~value.image) }}" class="img-fluid" alt="">
                        </div>
                        <div class="col-sm-8">
                            <h3>{{ value.name }}</h3>
                            <p class="h5 my-2">{{ value.price }}</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <p class="my-1">{{ value.description }}</p>
                            <p>
                                <a href="{{ url('product.index',{'categoryslug' :value.slug, 'productslug' : value.pslug}) }}" class="btn btn-primary">
                                    <span class="fas fa-eye"></span>
                                    Consult
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}